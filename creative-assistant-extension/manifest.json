{
    "manifest_version": 3,
    "name": "Creative Assistant",
    "version": "1.0.0",
    "description": "AI-powered design inspiration",
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    },
    
    "action": {
      "default_title": "Creative Assistant",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
      }
    },
    
    "permissions": [
      "activeTab",
      "storage",
      "sidePanel",
      "tabs"
    ],
    
    "host_permissions": [
      "https://*.supabase.co/*"
    ],
    
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    
    "background": {
      "service_worker": "background.js"
    }
}